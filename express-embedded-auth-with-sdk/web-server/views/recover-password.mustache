<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
      
    {{>menu}}
    
    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div id="page-title-header" class="ui header">
          <h2>Recover password</h2>
        </div>
      </div>

      <div class="row">
        {{>formMessages}}
      </div>

      <div class="row">
        <form id="password-recover-form" class="ui large form" action="{{action}}" method="POST">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Username or Email
              </div>
              <input id="username" type="text" name="username" />
            </div>
          </div>
          <button id="submit-button" class="ui fluid large primary submit button" type="submit">
            Next
          </button>
        </form>
      </div>

    </div>
  </body>
</html>
