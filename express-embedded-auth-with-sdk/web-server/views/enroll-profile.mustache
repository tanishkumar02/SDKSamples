<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
    {{>menu}}
    
    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div class="ui header">
          <h2>Self Service Registration</h2>
        </div>
      </div>

      <div class="row">
        {{>formMessages}}
      </div>

      <div class="row">
        <form id="registration-form" class="ui large form" action="{{action}}" method="POST">
          {{#inputs}}
            <div class="field">
              <div class="ui labeled input">
                <div class="ui label">
                  {{label}}
                </div>
                <input id={{name}} name="{{name}}" type="{{#secret}}password{{/secret}}{{^secret}}text{{/secret}}" />
              </div>
            </div>
          {{/inputs}}
          <button id="submit-button" class="ui fluid large primary submit button" type="submit">
            REGISTER
          </button>
        </form>
      </div>

    </div>
    
  </body>
</html>
